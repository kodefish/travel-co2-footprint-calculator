<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/primaryDarkColor">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/default_padding">

                <TextView
                    style="@style/home_text_view_label"
                    android:text="ongoing journey"
                    android:textColor="@android:color/white"
                    android:textStyle="" />

                <TextView
                    android:id="@+id/home_current_mode"
                    style="@style/home_text_view_big"
                    android:text="mode"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/material_text_display3" />

                <TextView
                    android:id="@+id/home_text_view_date"
                    style="@style/home_text_view_big"
                    android:textColor="@android:color/white"
                    android:text="05 December"
                    android:textSize="@dimen/material_text_display1"
                    android:textStyle="" />


            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/home_predictions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/rounded_top_corners"
            android:padding="@dimen/default_padding">

            <LinearLayout style="@style/EqualSpacingCenterVerticalLL">

                <TextView
                    android:id="@+id/home_emissions"
                    style="@style/home_text_view_value"
                    android:text="@string/home_emissions" />

                <TextView
                    style="@style/home_text_view_label"
                    android:text="grams" />

            </LinearLayout>

            <LinearLayout style="@style/EqualSpacingCenterVerticalLL">

                <TextView
                    android:id="@+id/home_distance_travelled"
                    style="@style/home_text_view_value"
                    android:text="@string/home_distance_travelled" />

                <TextView
                    style="@style/home_text_view_label"
                    android:text="meters" />

            </LinearLayout>

            <LinearLayout style="@style/EqualSpacingCenterVerticalLL">

                <Chronometer
                    android:id="@+id/home_chronometer"
                    style="@style/home_text_view_value" />

                <TextView
                    style="@style/home_text_view_label"
                    android:text="minutes" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ToggleButton
        android:id="@+id/button_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding"
        android:background="@color/primaryColor"
        android:textColor="@color/primaryTextColor"
        android:textOff="@string/start_scanning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
